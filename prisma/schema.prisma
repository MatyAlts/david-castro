// Prisma schema for local development.
// Default datasource uses SQLite for a simple local workflow.

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String?
}

model Customer {
  id        String    @id @default(cuid())
  name      String
  phone     String?
  email     String?
  cuit      String?
  address   String?
  zone      String    @default("Sin zona")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  orders    Order[]
  products  CustomProduct[]
  quotes    Quote[]
}

model PaperType {
  id        String           @id @default(cuid())
  name      String           @unique
  createdAt DateTime         @default(now())
  products  CustomProduct[]
}

model MatrixSize {
  id        String           @id @default(cuid())
  name      String           @unique
  createdAt DateTime         @default(now())
  products  CustomProduct[]
}

model CustomProduct {
  id           String      @id @default(cuid())
  customerId   String?
  internalName String
  description  String?
  measures     String?
  colors       String?
  paperTypeId  String?
  matrixSizeId String?
  observations String?
  dieCut       String?
  traceability String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  customer     Customer?   @relation(fields: [customerId], references: [id])
  paperType    PaperType?  @relation(fields: [paperTypeId], references: [id])
  matrixSize   MatrixSize? @relation(fields: [matrixSizeId], references: [id])
  orderItems   OrderItem[]
  quotes       Quote[]
}

model Quote {
  id         String    @id @default(cuid())
  customerId String
  productId  String?
  quantity   Int
  paperCost  Float
  printCost  Float
  matrixCost Float
  otherCost  Float
  margin     Float
  unitPrice  Float
  totalPrice Float
  status     String    @default("BORRADOR")
  notes      String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  customer   Customer  @relation(fields: [customerId], references: [id])
  product    CustomProduct? @relation(fields: [productId], references: [id])
  order      Order?    @relation("QuoteToOrder")
}

model Order {
  id         String      @id @default(cuid())
  customerId String
  quoteId    String?     @unique
  total      Float
  balance    Float
  paid       Boolean     @default(false)
  status     String      @default("SOLICITADO")
  notes      String?
  orderDate  DateTime    @default(now())
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  customer   Customer    @relation(fields: [customerId], references: [id])
  quote      Quote?      @relation("QuoteToOrder", fields: [quoteId], references: [id])
  items      OrderItem[]
  payments   Payment[]
  statusLogs OrderStatusHistory[]
}

model OrderItem {
  id        String        @id @default(cuid())
  orderId   String
  productId String?
  quantity  Int
  unitPrice Float
  subtotal  Float

  order     Order         @relation(fields: [orderId], references: [id])
  product   CustomProduct? @relation(fields: [productId], references: [id])
}

model OrderStatusHistory {
  id        String   @id @default(cuid())
  orderId   String
  status    String
  changedAt DateTime @default(now())

  order     Order    @relation(fields: [orderId], references: [id])
}

model Payment {
  id                String   @id @default(cuid())
  orderId           String
  amount            Float
  method            String
  isDeferred        Boolean  @default(false)
  accreditationDate DateTime?
  paymentDate       DateTime @default(now())

  order             Order    @relation(fields: [orderId], references: [id])
}
